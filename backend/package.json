{
  "name": "edu-platform-backend",
  "version": "1.0.0",
  "description": "Educational content platform backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "bash scripts/start-with-migrations.sh",
    "lint": "eslint . --ext .ts",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "prisma:generate": "prisma generate",
    "generate": "prisma generate",
    "postinstall": "prisma generate"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "dependencies": {
    "@google/generative-ai": "^0.3.1",
    "@prisma/client": "^5.9.1",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "*",
    "google-auth-library": "^9.14.1",
    "helmet": "*",
    "jsonwebtoken": "^9.0.2",
    "morgan": "*",
    "multer": "^1.4.5-lts.1",
    "stripe": "^15.12.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "*",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.10.6",
    "prisma": "^5.9.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
